---
import "../styles/global.css"
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Crea</title>

    <!-- Fuente Montserrat Semibold 600 -->
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap"
      rel="stylesheet"
    />
    <!-- Estilo global para usar Montserrat -->
    <style is:global>
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
      }
    </style>
  </head>
  <body>
    <slot />

    <!-- Scroll Animations: carga desde /public/scripts -->
    <script type="module" src="/scripts/scroll-animate.js"></script>
  </body>
</html>


	
